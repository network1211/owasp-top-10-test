{
  "openapi": "3.0.0",
  "info": {
    "title": "OWASP API Vulnerabilities Combined App (Security Scheme Added)",
    "version": "1.0.5"
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      },
      "apiKeyAuth": {
        "type": "apiKey",
        "in": "query",
        "name": "apikey"
      }
    }
  },
  "security": [
    { "bearerAuth": [] },
    { "apiKeyAuth": [] }
  ],
  "paths": {
    "/api/v1/invoices/{invoice_id}": {
      "get": {
        "summary": "Get invoice by ID",
        "description": "Returns deterministic invoice amount and mapped user_id. Valid invoice_id is 1001..1070.",
        "security": [
          { "bearerAuth": [] }
        ],
        "parameters": [
          {
            "name": "invoice_id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "description": "Invoice ID (1001..1070)"
          }
        ],
        "responses": {
          "200": {
            "description": "Invoice found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "invoice_id": { "type": "string" },
                    "user_id": { "type": "string" },
                    "Amount": { "type": "integer" }
                  },
                  "required": ["invoice_id", "user_id", "Amount"]
                }
              }
            }
          },
          "401": { "description": "Missing/invalid Bearer token" },
          "404": { "description": "Invoice not found" }
        }
      }
    },
    "/api/v1/auth/data": {
      "get": {
        "summary": "Access using API key and registration token",
        "parameters": [
          { "name": "apikey", "in": "query", "required": true, "schema": { "type": "string" } },
          { "name": "regToken", "in": "query", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": { "description": "OK" },
          "201": { "description": "Created" },
          "400": { "description": "Bad Request" },
          "401": { "description": "Unauthorized" },
          "403": { "description": "Forbidden" },
          "404": { "description": "Not Found" },
          "429": { "description": "Too Many Requests" },
          "503": { "description": "Service Unavailable" }
        }
      }
    },
